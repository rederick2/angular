.container
    form.form-signin.form-register(ng-submit="register()", name="registerForm")
        h2.form-signin-heading Register
        .control-group
            .controls
                input.form-control(type="text", data-ng-model="username", unique-username, placeholder="Username", name="username", required, data-ng-minlength="1", data-ng-maxlength="20", autofocus)
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.username.$error.required")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.username.$error.minlength")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.username.$error.maxlength")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.username.$error.uniqueUsername")
                i.valid.fa.fa-check-circle-o.fa-2x(ng-show="registerForm.username.$valid")
            .controls
                input.form-control(type="email", data-ng-model="email", unique-email, placeholder="email@example.com", name="email", required, autofocus)
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.email.$error.required")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.email.$error.email")
                i.valid.fa.fa-check-circle-o.fa-2x(ng-show="registerForm.email.$valid")
            .controls
                input.form-control(type="password", data-ng-model="password", placeholder="Password", name="password", required, data-ng-minlength="5", data-ng-maxlength="60")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.password.$error.required")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.password.$error.minlength")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.password.$error.maxlength")
                i.valid.fa.fa-check-circle-o.fa-2x(ng-show="registerForm.password.$valid")
            .controls
                input.form-control(ng-model='password_verify', type='password', name='confirm_password', placeholder='confirm password', required, data-ng-minlength="5", data-ng-maxlength="60", data-password-verify='password')
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.confirm_password.$error.required")
                i.valid.fa.fa-check-circle-o.fa-2x(ng-show="registerForm.confirm_password.$valid")
        hr
        .control-group
            .controls
                input.form-control(type="text", data-ng-model="firstname", placeholder="First Name", name="firstname", required, data-ng-minlength="1", data-ng-maxlength="200")
                i.error.fa.fa-times-circle-o.fa-2x(ng-show="registerForm.firstname.$error.required")
                i.valid.fa.fa-check-circle-o.fa-2x(ng-show="registerForm.firstname.$valid")
        hr
        .control-group
            label.radio.inline
                input(type="radio", name="role", data-ng-model="role", id="adminRole", data-ng-value="userRoles.admin")
                | Administrator
            label.radio.inline
                input(type="radio", name="role", data-ng-model="role", id="adminRole", data-ng-value="userRoles.user")
                | Normal user
        button.btn.btn-lg.btn-primary.btn-block(type="submit", data-ng-disabled="registerForm.$invalid") Submit
        hr
        .alert.alert-danger(ng-show="registerForm.$invalid && registerForm.$dirty")
            strong Please correct the following errors:
            ul
                
                li(ng-show="registerForm.username.$error.required") Username required
                li(ng-show="registerForm.username.$error.minlength") Username has to be at least 1 character long
                li(ng-show="registerForm.username.$error.maxlength") Username has to be at most 20 character long
                li(ng-show="registerForm.password.$error.required") Password is required
                li(ng-show="registerForm.confirm_password.$error.passwordVerify") Password not is equal
                li(ng-show="registerForm.username.$error.uniqueUsername") Username exists
                li(ng-show="registerForm.password.$error.minlength") Password must be at least 5 characters long
                li(ng-show="registerForm.password.$error.maxlength") Password must be at most 60 characters long
                li(ng-show="registerForm.firstname.$error.required") Firstname is required
                li(ng-show="registerForm.email.$error.required") Email is required
                li(ng-show="registerForm.email.$error.email") Invalid email
                li(ng-show="registerForm.email.$error.uniqueEmail") Email exists