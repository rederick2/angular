div.row
	div.col-md-3.profile
		div.thumbnail
			img(src="http://placehold.it/250x150" alt="...")
			div.caption
				h2 {{user.username}}
	div.col-md-9
		div.panel.panel-default
			form(ng-submit="addPost()", name="postForm")
				div.panel-body
					textarea.form-control(rows="2", placeholder="Qu√© quieres publicar?", data-ng-model="message", required , live-url)
					div(ng-show="photo")
						//button.navbar-right(type="button" , ng-click="photo=false; selectedFiles=null") &times;
						div(ng-show="dropSupported", class="drop-box", ng-file-drop="onFileSelect($files);", ng-file-drop-available="dropSupported=true") drop files here
							a.btn.btn-default.btn-select-files(href="#") Select Files
							input.uploadphoto(type="file", name="file", ng-file-select="onFileSelect($files)", accept="image/*")
						div.thumbnail.picture(ng-show="selectedFiles != null",ng-bind-html="uploadimage")
					.liveurl-loader 
						i.fa.fa-spinner.fa-spin
					i(ng-show='loading').fa.fa-spinner.fa-spin
					.liveurl
						.close(title='close')
						.inner
							.image  
							.details
								.info
									h3.title  
									.description  
									a.link(href="#", target="_blank")
										.url  
								.thumbnail
									.pictures
										.controls
											.prev.button.inactive
											.next.button.inactive
											.count
												span.current 0
												span  de 
												span.max 0
								.video
				div.panel-footer
					.btn-group
						button.btn.btn-info(type="submit", data-ng-disabled="postForm.$invalid && !loading") publicar
					| &nbsp;
					.btn-group
						a.btn.btn-default(href="#", title="Photos", ng-click="uploadPhoto()")
							i.fa.fa-camera
						a.btn.btn-default(href="./", title="Code Source")
							i.fa.fa-code
		hr
		h4 Recent Activity
		div(masonry)
			div.col-md-6.masonry-brick(ng-repeat="post in posts")
				div.panel.panel-default
					ul.nav.navbar-nav.navbar-right(data-access-level='accessLevels.user')
						li.dropdown(data-toggle="dropdown")
							a.link.dropdown-toggle(data-toggle="dropdown" , href="#")
								i.fa.fa-chevron-down
							ul.dropdown-menu
								li(data-access-level='accessLevels.user')
									a(href="#" , ng-click="remove(post.id);", ng-show="post.to == authUser") Remove post
									a(href="#") Report spam or abuse
					div.panel-body
						h3(ng-show="post.message !== ''")
							i.fa.fa-quote-left.fa-2x.pull-left
							div(ng-bind-html="post.message")	
						div
							hr(ng-show="post.type == 'url' || post.type == 'photo' || post.type == 'video'")
							img(src="{{post.picture}}",ng-show=" post.type == 'photo'", style="width:100%;")
							iframe(class="youtube-player", type="text/html", style="width:100%",ng-src="{{trustSrc(post.source)}}", frameborder="0", allowfullscreen, ng-show="post.type == 'video'")
							a(href="{{post.url}}" , target="_blank")
								img(src="{{post.picture}}",ng-show="post.type == 'url'", style="width:40%; margin:0px 10px", align='left')
								h3 {{post.title}}
							a(href="{{post.url}}" , target="_blank")
								span(style='color:#666666')	{{post.fuente}}
						hr
						a(href="./{{post.from}}") 
							img(src="http://placehold.it/50x50", align='left', valign='middle', style='margin:5px')
						a(href="./{{post.from}}") 
							strong{{post.from}}
						h6
							span(am-time-ago="post.created_time", title="{{post.created_time | amCalendar}}")
					div.panel-footer
						.btn-group
							a.btn.btn-info(href="./", title="Check")
								i.fa.fa-check
							a.btn.btn-info(href="./", title="Comments")
								i.fa.fa-comments
							a.btn.btn-info(href="./", title="Share")
								i.fa.fa-share